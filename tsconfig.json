{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@likelymindslm/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@likelymindslm/lmbase": ["libs/lmbase/src/index.ts"],
      "@likelymindslm/lmbase-store": ["libs/lmbase-store/src/index.ts"],
      "@likelymindslm/lmbase-sync": ["libs/lmbase-sync/src/index.ts"],
      "@likelymindslm/lmbase-adapter": ["libs/lmbase-adapter/src/index.ts"],
      "@likelymindslm/lmbase-livequery": ["libs/lmbase-livequery/src/index.ts"],
      "@likelymindslm/lmbase-changestreams": [
        "libs/lmbase-changestreams/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
